<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Components.CustomTabBar">
    
    <Border BackgroundColor="{StaticResource BackgroundSecondary}"
            StrokeThickness="0"
            Padding="10,5">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20,20,0,0" />
        </Border.StrokeShape>
        
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
            
            <!-- Home Button -->
            <VerticalStackLayout Spacing="4">
                <Border x:Name="HomeBtn"
                        BackgroundColor="Transparent"
                        WidthRequest="50"
                        HeightRequest="50"
                        StrokeThickness="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHomeClicked" />
                    </Border.GestureRecognizers>
                    <Path x:Name="HomeIcon"
                          Data="M4 12 L12 4 L20 12 M6 10.5 V19 A1 1 0 0 0 7 20 H10 V17 A1 1 0 0 1 11 16 H13 A1 1 0 0 1 14 17 V20 H17 A1 1 0 0 0 18 19 V10.5"
                          Stroke="White"
                          StrokeThickness="2"
                          StrokeLineCap="Round"
                          StrokeLineJoin="Round"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          WidthRequest="24"
                          HeightRequest="24" />
                </Border>
            </VerticalStackLayout>
            
            <!-- Liked Button -->
            <VerticalStackLayout Spacing="4">
                <Border x:Name="LikedBtn"
                        BackgroundColor="Transparent"
                        WidthRequest="50"
                        HeightRequest="50"
                        StrokeThickness="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLikedClicked" />
                    </Border.GestureRecognizers>
                    <Path x:Name="LikedIcon"
                          Data="M12.01 6.001 C6.5 1 1 8 5.782 13.001 L12.011 20 L18.241 13.001 C23 8 17.5 1 12.01 6.002 Z"
                          Stroke="White"
                          StrokeThickness="2"
                          StrokeLineCap="Round"
                          StrokeLineJoin="Round"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          WidthRequest="24"
                          HeightRequest="24" />
                </Border>
            </VerticalStackLayout>
            
            <!-- Stats Button -->
            <VerticalStackLayout Spacing="4">
                <Border x:Name="StatsBtn"
                        BackgroundColor="Transparent"
                        WidthRequest="50"
                        HeightRequest="50"
                        StrokeThickness="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnStatsClicked" />
                    </Border.GestureRecognizers>
                    <Path x:Name="StatsIcon"
                          Data="M17 15.5 V5 C17 5 20 6 20 9 M10 6 H4 M13 10 H4 M8 14 H4 M17 16.4 C17 17.726 15.657 18.8 14 18.8 C12.343 18.8 11 17.726 11 16.4 C11 15.074 12.343 14 14 14 C15.657 14 17 15.074 17 16.4 Z"
                          Stroke="White"
                          StrokeThickness="2"
                          StrokeLineCap="Round"
                          StrokeLineJoin="Round"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          WidthRequest="24"
                          HeightRequest="24" />
                </Border>
            </VerticalStackLayout>
            
            <!-- Account Button -->
            <VerticalStackLayout Spacing="4">
                <Border x:Name="AccountBtn"
                        BackgroundColor="Transparent"
                        WidthRequest="50"
                        HeightRequest="50"
                        StrokeThickness="0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAccountClicked" />
                    </Border.GestureRecognizers>
                    <Path x:Name="AccountIcon"
                          Data="M12 4 A4 4 0 1 0 12 12 A4 4 0 0 0 12 4 Z M10 13 A4 4 0 0 0 6 17 V18 A2 2 0 0 0 8 20 H16 A2 2 0 0 0 18 18 V17 A4 4 0 0 0 14 13 H10 Z"
                          Fill="White"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          WidthRequest="24"
                          HeightRequest="24" />
                </Border>
            </VerticalStackLayout>
            
        </HorizontalStackLayout>
    </Border>
    
</ContentView>