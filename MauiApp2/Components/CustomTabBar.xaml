<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Components.CustomTabBar">
    
    <Border BackgroundColor="{StaticResource BackgroundSecondary}"
            StrokeThickness="0"
            Padding="10,5">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20,20,0,0" />
        </Border.StrokeShape>
        
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
            
            <!-- Home Button -->
            <VerticalStackLayout Spacing="4">
                <Button x:Name="HomeBtn"
                        Text="🏠"
                        FontSize="24"
                        BackgroundColor="Transparent"
                        Clicked="OnHomeClicked"
                        WidthRequest="50"
                        HeightRequest="50" />
                <Label Text="Home" 
                       FontSize="10" 
                       HorizontalOptions="Center"
                       TextColor="{StaticResource Grey}" />
            </VerticalStackLayout>
            
            <!-- Liked Button -->
            <VerticalStackLayout Spacing="4">
                <Button x:Name="LikedBtn"
                        Text="❤️"
                        FontSize="24"
                        BackgroundColor="Transparent"
                        Clicked="OnLikedClicked"
                        WidthRequest="50"
                        HeightRequest="50" />
                <Label Text="Liked" 
                       FontSize="10" 
                       HorizontalOptions="Center"
                       TextColor="{StaticResource Grey}" />
            </VerticalStackLayout>
            
            <!-- Stats Button -->
            <VerticalStackLayout Spacing="4">
                <Button x:Name="StatsBtn"
                        Text="📊"
                        FontSize="24"
                        BackgroundColor="Transparent"
                        Clicked="OnStatsClicked"
                        WidthRequest="50"
                        HeightRequest="50" />
                <Label Text="Stats" 
                       FontSize="10" 
                       HorizontalOptions="Center"
                       TextColor="{StaticResource Grey}" />
            </VerticalStackLayout>
            
            <!-- Account Button -->
            <VerticalStackLayout Spacing="4">
                <Button x:Name="AccountBtn"
                        Text="👤"
                        FontSize="24"
                        BackgroundColor="Transparent"
                        Clicked="OnAccountClicked"
                        WidthRequest="50"
                        HeightRequest="50" />
                <Label Text="Account" 
                       FontSize="10" 
                       HorizontalOptions="Center"
                       TextColor="{StaticResource Grey}" />
            </VerticalStackLayout>
            
        </HorizontalStackLayout>
    </Border>
    
</ContentView>