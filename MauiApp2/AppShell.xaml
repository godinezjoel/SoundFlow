<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MauiApp2.Pages"
    Shell.TabBarIsVisible="False"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp2">

    <!-- Routes fÃ¼r Navigation (ohne sichtbare TabBar) -->
    <ShellContent Route="HomePage" ContentTemplate="{DataTemplate pages:HomePage}" />
    <ShellContent Route="LikedSongsPage" ContentTemplate="{DataTemplate pages:LikedSongsPage}" />
    <ShellContent Route="StatsPage" ContentTemplate="{DataTemplate pages:StatsPage}" />
    <ShellContent Route="AccountPage" ContentTemplate="{DataTemplate pages:AccountPage}" />

</Shell>
